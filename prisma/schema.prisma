// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Institution {
  id        Int      @id @default(autoincrement())
  name      String
  region    String
  country   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Animal {
  id       Int      @id @default(autoincrement())
  name     String
  species  String
  birthday DateTime
}

model Class {
  id    Int    @id @default(autoincrement())
  name  String
  level Int
}

model Server {
  id      Int     @id @default(autoincrement())
  name    String
  address String
  active  Boolean
}
